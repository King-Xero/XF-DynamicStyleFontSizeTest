<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="ButtonsTestApp.MainPage">

    <StackLayout Margin="30"  HorizontalOptions="CenterAndExpand">
        <Label Text="Welcome to Xamarin.Forms!" 
               HorizontalOptions="CenterAndExpand"
               Style="{DynamicResource DynamicLabel}"/>

        <Button Text="Welcome to Xamarin.Forms!"
                HorizontalOptions="CenterAndExpand"
                Style="{DynamicResource DynamicTextButton}"/>

        <Button Text="Increase size" Clicked="IncreaseFont_OnClicked"/>
        <Button Text="Decrease size" Clicked="DecreaseFont_OnClicked"/>
    </StackLayout>

</ContentPage>